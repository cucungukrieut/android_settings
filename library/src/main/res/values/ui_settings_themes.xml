	<!-- Theme for settings screen. -->
	<style name="Ui.Settings.Theme" parent="Ui.Theme">

		<!-- ## CONFIGURATION ================================================================== -->

		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>

		<!-- ## METRICS ======================================================================== -->

		<item name="android:listPreferredItemPaddingLeft">@dimen/ui_settings_list_item_padding_start</item>
		<item name="android:listPreferredItemPaddingRight">@dimen/ui_settings_list_item_padding_end</item>

		<!-- ## CATEGORIES ===================================================================== -->

		<item name="android:preferenceCategoryStyle">@style/Ui.Settings.Preference.Category</item>
		<item name="uiSettingCategoryStyle">@style/Ui.Settings.Widget.TextView.Category</item>
		<item name="uiSettingCategoryDividerBackground">@drawable/ui_settings_bg_category_divider</item>
		<item name="uiSettingCategoryDividerShadowTop">@drawable/ui_setting_sdw_category_divider_top</item>
		<item name="uiSettingCategoryDividerShadowBottom">@drawable/ui_setting_sdw_category_divider_bottom</item>

		<!-- ## HEADERS ======================================================================== -->

		<item name="uiSettingHeaderIconStyle">?attr/uiSettingIconStyle</item>
		<item name="uiSettingHeaderTitleStyle">?attr/uiSettingTitleStyle</item>
		<item name="uiSettingHeaderSummaryStyle">?attr/uiSettingSummaryStyle</item>
		<item name="uiSettingHeaderDivider">?attr/uiSettingDivider</item>
		<item name="uiSettingHeaderDividerHeight">?attr/uiSettingDividerHeight</item>

		<!-- ## PREFERENCES ==================================================================== -->

		<item name="android:preferenceLayoutChild">@layout/ui_setting_preference</item>
		<item name="android:preferenceStyle">@style/Ui.Settings.Preference</item>
		<item name="android:preferenceInformationStyle">@style/Ui.Settings.Preference.Information</item>
		<item name="android:switchPreferenceStyle">@style/Ui.Settings.Preference.Switch</item>
		<item name="android:checkBoxPreferenceStyle">@style/Ui.Settings.Preference.CheckBox</item>
		<item name="android:dialogPreferenceStyle">@style/Ui.Settings.DialogPreference</item>
		<item name="uiSettingSeekBarPreferenceStyle">@style/Ui.Settings.Preference.SeekBar</item>
		<item name="uiSettingSpinnerPreferenceStyle">@style/Ui.Settings.Preference.Spinner</item>
		<item name="uiSettingSelectionDialogPreferenceStyle">@style/Ui.Settings.DialogPreference.Selection</item>
		<item name="uiSettingDateDialogPreferenceStyle">@style/Ui.Settings.DialogPreference.Date</item>
		<item name="uiSettingTimeDialogPreferenceStyle">@style/Ui.Settings.DialogPreference.Time</item>
		<item name="uiSettingEditDialogPreferenceStyle">@style/Ui.Settings.DialogPreference.Edit</item>
		<item name="uiSettingColorDialogPreferenceStyle">@style/Ui.Settings.DialogPreference.Color</item>
		<item name="uiSettingColorViewStyle">@style/Ui.Settings.ColorView</item>

		<!-- ## WIDGETS ======================================================================== -->

		<item name="android:dropDownSpinnerStyle">@style/Ui.Settings.Widget.Spinner.DropDown</item>
		<item name="uiSettingsListViewStyle">@style/Ui.Settings.Widget.ListView</item>
		<item name="uiSettingIconStyle">@style/Ui.Settings.Widget.ImageView.Icon</item>
		<item name="uiSettingTitleStyle">@style/Ui.Settings.Widget.TextView.Title</item>
		<item name="uiSettingSummaryStyle">@style/Ui.Settings.Widget.TextView.Summary</item>
		<item name="uiSettingDivider">@drawable/ui_settings_divider</item>
		<item name="uiSettingDividerHeight">1dp</item>

		<!-- ### THEMES ======================================================================== -->

		<item name="dialogTheme">@style/Dialog.Theme</item>
	</style>

